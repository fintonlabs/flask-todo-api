import unittest
from main import app, db, Task

class MainTestCase(unittest.TestCase):
    def setUp(self):
        self.app = app.test_client()
        self.db = db

    def test_get_all_tasks(self):
        response = self.app.get('/tasks')
        self.assertEqual(response.status_code, 200)

    def test_create_task(self):
        response = self.app.post('/tasks', json={'title': 'Test Task', 'description': 'Test Description'})
        self.assertEqual(response.status_code, 200)
        self.assertEqual(response.json, {'message': 'New task created!'})

    def test_complete_task(self):
        task = Task(title='Test Task', description='Test Description', completed=False)
        self.db.session.add(task)
        self.db.session.commit()
        response = self.app.put(f'/tasks/{task.id}')
        self.assertEqual(response.status_code, 200)
        self.assertEqual(response.json, {'message': 'Task has been completed!'})

    def test_delete_task(self):
        task = Task(title='Test Task', description='Test Description', completed=False)
        self.db.session.add(task)
        self.db.session.commit()
        response = self.app.delete(f'/tasks/{task.id}')
        self.assertEqual(response.status_code, 200)
        self.assertEqual(response.json, {'message': 'Task has been deleted!'})

if __name__ == '__main__':
    unittest.main()